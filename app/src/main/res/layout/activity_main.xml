<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/questionToVerify"
            android:layout_marginBottom="24dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                tools:text="Е//И слов предметом (сущ.)"
                />

            <TextView
                android:id="@+id/exceptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:text="Исключение:"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/exception"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="0dp"
                android:layout_marginLeft="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                tools:text="Исключение из этого правила"
                tools:visibility="visible"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/questionToVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:padding="16dp"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/exceptionIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@id/questionToVerify"
            android:layout_alignEnd="@id/questionToVerify"
            android:layout_marginBottom="-8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="!"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_exception"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/positiveReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Да"
                />

            <Button
                android:id="@+id/negativeReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:text="Нет"
                />

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>