        "positive": null,
        "negative": null
      }
    },
    {
      "title": "Гласные после Ц: Ы//И",
      "rule": {
        "title": "Ы//И: Ы в окончании (отцы, куцый, но цирк, акция)",
        "exceptions": ["цыган", "цыплёнок, цыц, на цыпочках", "суффикс ЫН (принадлежность) курицын хвост"],
        "positive": null,
        "negative": null
      }
    },
    {
      "title": "Гласные после Ц: A//Я, У//Ю, Э//Е",
      "rule": {
        "title": "A//Я, У//Ю, Э//Е: цапля, цукаты, цех",
        "exceptions": ["иноязычные собственные имена (г. Цюрих, И. Друцэ, Коцюбинский и др.)"],
        "positive": null,
        "negative": null
      }
    },
    {
      "title": "Э//Е в корне",
      "rule": {
        "title": "это первая буква корня?",
        "exceptions": [],
        "positive": {
          "title": "Пишем, что слышим (двухэтажный)",
          "exceptions": [],
          "positive": null,
          "negative": null
        },
        "negative": {
          "title": "После согласной // И ?",
          "exceptions": [],
          "positive": {
            "title": "Е (темп, диета)",
            "exceptions": ["пэр, мэр, сэр, удэге, эсесовец", "иноязычные собственные имена (г. Улан-Удэ)"],
            "positive": null,
            "negative": null
          },
          "negative": {
            "title": "Э (поэт)",
            "exceptions": ["проект, реестр, траектория, феерия, геена (ад)"],
            "positive": null,
            "negative": null
          }
        }
      }
    }
  ]
}