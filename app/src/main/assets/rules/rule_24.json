{
  "title":"Употребление Ъ и Ь знаков",
  "rules":[
    {
      "title":"Разделительные",
      "rule": {
        "title": "Слышатся [j] после согласного?",
        "exceptions":[],
        "positive":{
          "title":"Это первый звук корня?",
          "exceptions": [],
          "positive": {
            "title": "Ъ (подъезд)",
            "exceptions": [ "сложносокращённые слова (детясли)", "иноязычные слова (субъект)" ],
            "positive": null,
            "negative": null
          },
          "negative": {
            "title": "Ь (вьюга)",
            "exceptions": [ "французские // испанские слова (батальон, бульон)" ]
          }
        },
        "negative":{
          "title": "знаков нет (сэкономить)",
          "exceptions": [],
          "positive": null,
          "negative": null
        }
      }
    },
    {
      "title": "Знак мягкости согласного",
      "rule": {
        "title": "Не используется перед гласным! (конь, коньки, польза)",
        "exceptions": [
          "1) между двумя лл (иллюзия)\n2) перед постоянно мягким согласным (кости, бантик)\n3) в сочетаниях с Ч и Щ (точно, гонщик, ночка)",
          "после [Л'] \"Ъ\" сохраняется (пильщик, кровельщик)"
        ],
        "positive": null,
        "negative": null
      }
    },
    {
      "title": "После шипящих на конце слова",
      "rule": {
        "title": "Это слово из 9 наречий (как?)?",
        "exceptions": ["вскачь, навзничь, наотмашь, напрочь, настежь, невмочь, прочь, сплошь, точь-в-точь"],
        "positive": {
          "title": "Ь (навзничь)",
          "exceptions": [],
          "positive": null,
          "negative": null
        },
        "negative": {
          "title": "Это слово-действие?",
          "exceptions": [],
          "positive": {
            "title": "Ь (идёшь, режь)"
          },
          "negative": {
            "title": "Это слово женского рода множественного числа?",
            "exceptions": [],
            "positive": {
              "title": "Ь (ночь, мышь)",
              "exceptions": [],
              "positive": null,
              "negative": null
            },
            "negative": {
              "title": "Без мягкого знака (ключ, туч нет)",
              "exceptions": ["ишь, лишь, вишь, бишь, слышь"],
              "positive": null,
              "negative": null
            }
          }
        }
      }
    }
  ]
}